                    </div>
                </div>

                <div>
                    <div class="pill pill-primary">General</div>
                    <div class="divide-y">
                        {
                            Faq.map((f) => (
                                <details>
                                    <summary class="hover:cursor-pointer text-regent-900 text-base lg:text-2xl font-medium tracking-tight focus:text-regent-800 py-6 text-left w-full">

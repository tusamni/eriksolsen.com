---
// props
export interface Props {
	shoot: object;
	description?: boolean;
}
const { shoot, description = false } = Astro.props;

// components
import Figure from "@/components/image/Image";

// functions
import { timeAgo } from "@/functions/DateTime";
---

<div>
	<a href={`/photography/shoots/${shoot.metadata.slug}`} class="@container group">
		<div class="w-full relative overflow-hidden mb-6">
			<div class="cr cr-top cr-right cr-sticky cr-blue">Featured</div>
			<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-6 h-6 absolute bottom-4 group-hover:right-4 -right-72 text-gray-50 transition-all duration-200 pointer-events-none z-20">
				<path fill-rule="evenodd" d="M10 18a8 8 0 1 0 0-16 8 8 0 0 0 0 16ZM6.75 9.25a.75.75 0 0 0 0 1.5h4.59l-2.1 1.95a.75.75 0 0 0 1.02 1.1l3.5-3.25a.75.75 0 0 0 0-1.1l-3.5-3.25a.75.75 0 1 0-1.02 1.1l2.1 1.95H6.75Z" clip-rule="evenodd">
				</path>
			</svg>
			<div class="bg-gradient-to-br from-transparent via-gray-900/10 to-gray-900/50 opacity-0 group-hover:opacity-100 w-full h-full absolute z-10 transition-opacity duration-300 rounded"></div>

			<Figure src={shoot.metadata.images.thumbnail.url} figureClass="shadow-xl w-full" class="object-cover w-full h-full" sizes="(min-width: 768px) 75vw, 100vw" />
		</div>

		<div class="space-y-1 flex flex-col">
			<div class="text-3xl md:text-4xl tracking-tight md:line-clamp-1 font-medium text-gray-900">
				{shoot.title}
			</div>

			<div class="flex gap-2 items-center text-base text-gray-800">
				<time>{timeAgo(shoot.metadata.date)}</time>
				<div>&middot;</div>
				<div>{shoot.metadata.images.gallery.length} photos</div>
			</div>
		</div>
	</a>
</div>

<style>
	.cr {
		@apply w-[175px] sm:w-[250px] p-4 absolute text-center text-white text-xs sm:text-base md:text-lg font-bold uppercase top-5 sm:top-10 -right-10 sm:-right-14 z-20 bg-emerald-500;
	}

	.cr-top.cr-left,
	.cr-bottom.cr-right {
		transform: rotate(-45deg);
	}

	.cr-top.cr-right,
	.cr-bottom.cr-left {
		transform: rotate(45deg);
	}
</style>

---
// props
export interface Props {
    url: string;
    text: string;
}
const { url, text } = Astro.props;
---

<a href={url} title={text} class="font-semibold w-fit text-lg group dark:text-zinc-100">
    {text}
    <p class="transition duration-100 group-hover:translate-x-1 transform inline-block dark:text-zinc-100">&rarr;</p>
</a>

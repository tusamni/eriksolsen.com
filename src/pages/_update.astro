---
import Layout from "@/layouts/BaseLayout";

import { cosmic } from "@/library/cosmic";
import * as fs from "fs";
import * as path from "path";
import { readFile } from "fs/promises";

// UPDATE METADATA
const folder = "";

const { media: files } = await cosmic.media.find({
	folder: folder,
});

for (const file of files) {
	if (file.alt_text) {
		console.log("Skipping", file.original_name);

		continue;
	}

	let base = path.basename(
		file.original_name,
		path.extname(file.original_name),
	);
	let data = JSON.parse(await readFile(`./src/files/${base}.json`, "utf8"));

	const alt = data.alt;
	delete data.alt;

	await cosmic.media.updateOne(file.id, {
		alt_text: alt,
		metadata: data,
	});
}

---
// components
import Figure from "@/components/image/Figure";

// functions
import { formatDate } from "@/functions/DateTime";

// props
export interface Props {
    shoot: object;
}
const { shoot } = Astro.props;
---

<a
    href={shoot.url}
    class="group space-y-2"
    data-title={shoot.frontmatter.title}
    data-date={shoot.frontmatter.date}
    data-category={shoot.frontmatter.category}
    data-brand={shoot.frontmatter.brand ? shoot.frontmatter.brand : ``}>
    <div class="relative flex items-center justify-center">
        <Figure
            src={shoot.frontmatter.featured}
            metadata={false}
            sizes="(min-width: 640px) 500px, 100vw"
            class="aspect-square object-cover group-hover:scale-105 duration-300 rounded-sm"
            figureClass="rounded-sm border-b-4 border-r-4 border-zinc-200 dark:border-zinc-600 bg-zinc-200 overflow-hidden"
        />

        <div
            class="absolute bottom-4 right-4 flex h-10 w-10 items-center justify-center rounded-full bg-zinc-900 bg-opacity-60 opacity-0 transition duration-300 group-hover:opacity-100">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="z-10 h-8 w-8 text-white">
                <path
                    fill-rule="evenodd"
                    d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25zm4.28 10.28a.75.75 0 000-1.06l-3-3a.75.75 0 10-1.06 1.06l1.72 1.72H8.25a.75.75 0 000 1.5h5.69l-1.72 1.72a.75.75 0 101.06 1.06l3-3z"
                    clip-rule="evenodd">
                </path>
            </svg>
        </div>
    </div>

    <div>
        <div class="flex justify-between">
            <time datetime={formatDate(shoot.frontmatter.date)} class="text-xs text-zinc-400 dark:text-zinc-500">
                {formatDate(shoot.frontmatter.date, { day: "numeric", month: "long", year: "numeric" })}
            </time>

            <div class="text-xs text-zinc-400 dark:text-zinc-500">{shoot.frontmatter.category}</div>
        </div>

        <h2 class="text-base font-semibold tracking-tight text-zinc-800 dark:text-zinc-100">
            {shoot.frontmatter.title}
        </h2>
    </div>
</a>

---
// props
export interface Props {
    // url?: string;
    text: string;
    theme?: string;
    size?: string;
    classes?: string;
}
const { text, theme = "dark", size = "lg", classes } = Astro.props;

// button styling themes
const themes = {
    light: ["bg-white", "text-stone-900", "hover:bg-stone-50", "hover:text-stone-700", "border"],
    dark: ["bg-black", "text-white", "hover:bg-stone-700", "hover:text-stone-50"],
};

const sizes = {
    sm: ["px-5", "py-3", "text-sm"],
    lg: ["px-6", "py-4", "text-base"],
};

// if url defined, <a>, otherwise <button>
// const Type = url ? "a" : "button";
---

<button class:list={[`font-bold rounded-sm transition-all duration-300`, themes[theme], sizes[size], classes]}>
    {text}
</button>

---
// props
export interface Props {
	topMargin?: boolean;
	bottomMargin?: boolean;
	maxWidth?: string;
}
const { topMargin = false, bottomMargin = true, maxWidth = "max-w-5xl" } = Astro.props;
---

<div class:list={["space-y-6"]}>
	<div class:list={["text-balance text-left", maxWidth]}>
		<slot name="heading" />
	</div>

	<div class:list={["font-sora text-left text-lg leading-relaxed font-light", maxWidth]}>
		<slot name="description" />
	</div>

	<slot />
</div>

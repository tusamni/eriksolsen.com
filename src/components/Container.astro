---
// props
export interface Props {
    classes?: string;
    size?: string;
    padding?: boolean;
}
const { classes, size = "sm", padding = true } = Astro.props;

const sizes = {
    sm: ["max-w-screen-lg"],
    lg: ["max-w-screen-xl"],
};
const paddingSize = padding ? `px-6 md:px-8 lg:px-12` : ``;
---

<div class:list={[`mx-auto`, paddingSize, sizes[size], classes]}>
    <slot />
</div>

---
// components
import Container from "../content/Container.astro";

// config
import { siteConfig } from "@/src/config";
---

<div class="py-3 bg-neutral-200 text-sm">
    <Container>
        <div class="flex justify-center sm:justify-end">
            <ul class="flex gap-4">
                <li><strong>Email</strong> <a href={`mailto:${siteConfig.email}`}>{siteConfig.email}</a></li>
                <li><strong>Text or Call</strong> <a href={`tel:${siteConfig.phone.base}`}>{siteConfig.phone.formatted}</a></li>
            </ul>
        </div>
    </Container>
</div>

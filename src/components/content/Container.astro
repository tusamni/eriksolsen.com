---
// props
export interface Props {
	size?: "small" | "large" | "xlarge";
	classes?: string;
}
const { size = "small", classes } = Astro.props;
---

<div class:list={["px-6 sm:px-8 lg:px-12", classes]}>
	<div class:list={["mx-auto", size === "xlarge" && "max-w-[1650px]", size === "large" && "max-w-screen-2xl", size === "small" && "max-w-7xl"]}>
		<slot />
	</div>
</div>

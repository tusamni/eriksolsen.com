---
// props
export interface Props {
    post: object;
}
const { post } = Astro.props;
---

<div>
    <a class="group space-y-1" href={`/blog/${post.slug}`} title={post.title}>
        <p class="text-base text-pretty font-medium text-neutral-800 underline">
            {post.title}
        </p>
        <p class="text-sm text-neutral-600 line-clamp-2">
            {post.description}
        </p>
    </a>
</div>

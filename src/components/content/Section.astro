---
// props
export interface Props {
	size?: "tiny" | "small" | "large";
	classes?: string;
}
const { size = "small", classes } = Astro.props;
---

<div class:list={[size == "tiny" && "space-y-4 sm:space-y-12", size == "small" && "space-y-16 sm:space-y-30", size == "large" && "space-y-24 sm:space-y-44", classes]}>
	<slot />
</div>

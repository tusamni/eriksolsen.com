---
// layout
import Layout from "@/layouts/BaseLayout";

// components
import { siteConfig } from "@/config";
import Container from "@/components/content/Container";
---

<Layout footerPadding={false} navPadding={false}>
	<Container classes="py-20 lg:py-40">
		<div class="space-y-12 max-w-2xl mx-auto">
			<h1 class="text-balance">Whoops.</h1>

			<div class="space-y-8 text-xl">
				<p class="text-balance leading-8">
					My apologies, it looks like that page is missing. If you think I can help, shoot me an email at <a href={`mailto:${siteConfig.email.base}`} class="underline">{siteConfig.email.base}</a>.
				</p>
			</div>
		</div>
	</Container>
</Layout>

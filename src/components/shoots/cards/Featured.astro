---
// props
export interface Props {
	shoot: object;
	description?: boolean;
}
const { shoot, description = false } = Astro.props;

// components
import Figure from "@/components/image/Image";

// functions
import { timeAgo } from "@/functions/DateTime";
---

<div>
	<a href={`/photography/shoots/${shoot.data.slug}`} class="@container group">
		<div class="w-full relative mb-6">
			<div class="cr cr-top cr-right cr-sticky cr-blue">Featured</div>
			<div class="bg-gradient-to-br from-transparent via-gray-900/10 to-gray-900/50 opacity-0 group-hover:opacity-100 w-full h-full absolute z-10 transition-opacity duration-300 rounded"></div>

			<Figure src={shoot.data.images.thumbnail.url} figureClass="shadow-2xl w-full" class="object-cover w-full h-full" sizes="(min-width: 768px) 75vw, 100vw" showTitle={false} />
		</div>

		<div class="space-y-1 flex flex-col">
			<div class="text-3xl md:text-4xl tracking-tight md:line-clamp-1 font-medium text-gray-900">
				{shoot.data.title}
			</div>

			<div class="flex gap-2 items-center text-base text-gray-800">
				<time>{timeAgo(shoot.data.date)}</time>
				<div>&middot;</div>
				<div>{shoot.data.images.gallery.length} photos</div>
			</div>
		</div>
	</a>
</div>

<style>
	.cr {
		@apply py-3 lg:py-4 px-4 lg:px-12 absolute text-center text-white text-xs lg:text-lg font-bold uppercase z-20 bg-emerald-500 rounded-br-lg lg:rounded-br-2xl rounded-tl;
	}
</style>

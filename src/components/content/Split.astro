---
// props
export interface Props {
    small?: boolean;
    float?: boolean;
}
const { small = false, float = false } = Astro.props;
---

<div class:list={["grid grid-cols-1 md:grid-cols-12 gap-12"]}>
    <div
        class:list={[
            float && `md:sticky md:top-12`,
            small ? `md:col-span-3` : ` md:col-span-4`,
            "border-y md:border-b-0 border-neutral-800 pt-12",
        ]}>
        <slot name="heading" />
    </div>

    <!-- <div
        class:list={[
            small ? `md:col-span-3` : `md:col-span-4`,
            `self-end order-last`,
        ]}>
        <slot name="bottom" />
    </div> -->

    <div class:list={[small ? "md:col-span-9" : `md:col-span-8`, `row-span-2`]}>
        <slot />
    </div>
</div>

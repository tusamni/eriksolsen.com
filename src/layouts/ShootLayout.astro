---
// layouts
import BaseLayout from "@/layouts/BaseLayout";

// components
import Block from "@/components/content/Block";
import Container from "@/components/content/Container";
import Hero from "@/components/content/Hero";
import PostRelated from "@/components/PostRelated";
import Section from "@/components/content/Section";

// props
export interface Props {
    frontmatter: any;
}
const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title} description={frontmatter.description}>
    <Container>
        <h1>{frontmatter.title}</h1>
        <div class="prose prose-lg">{frontmatter.description}</div>
    </Container>

    <Hero image={frontmatter.featured} />

    <Container>
        <Section>
            <article class="prose prose-xl max-w-none">
                <slot />
            </article>

            {frontmatter.related ? <PostRelated posts={frontmatter.related} /> : ``}
        </Section>
    </Container>
</BaseLayout>

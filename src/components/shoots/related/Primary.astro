---
// content
import Figure from "@/components/image/Image";

// props
export interface Props {
	shoot: any;
	sizes?: string;
}
const { shoot, sizes = "100vw" } = Astro.props;
---

<div class="grid grid-cols-6 gap-4 items-center">
	<Figure src={shoot.metadata.images.thumbnail.url} figureClass="col-span-2" class="object-cover aspect-square" sizes="100px" gallery={false} showTitle={false} />

	<div class="col-span-4 space-y-3">
		<div class="text-base text-balance line-clamp-2">{shoot.title}</div>
	</div>
</div>

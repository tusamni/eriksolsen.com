---
// layout
import Layout from "@/layouts/BaseLayout";

// imports
import { Testimonials } from "@/data/Photography";
import { getEntry } from "astro:content";
import Container from "@/components/content/Container";
import Figure from "@/components/image/Figure";
import Heading from "@/components/content/Heading";
import Picture from "@/components/image/Picture";
import Split from "@/components/content/Split";
import Shoot from "@/components/shoots/cards/Secondary";

const featured = await getEntry("shoots", "2023/06/1997-993-carrera-4s");
const links = [
    {
        heading: "Pricing",
        description: "Pricing options tailored to your automotive photography needs.",
        cta: "See Pricing",
        url: "/photography/pricing",
    },
    {
        heading: "FAQ",
        description: "Expert answers to all your car photography inquiries.",
        cta: "Read FAQs",
        url: "/photography/faq",
    },
    {
        heading: "Shoots",
        description: "Browse my recent snapshots captured across Texas.",
        cta: "More Shoots",
        url: "/photography/shoots",
    },
];
const featuredShoot = await getEntry("shoots", "2018/05/1976-green-930-turbo");
---

<Layout
    title="Car Photography in Austin, TX"
    description="During the summer months you'll catch me shooting photos at Cars and Coffee at COTA or Coffee With Cars in Dripping Springs. I also do freelance photography for Bring a Trailer auctions."
    footerPadding={false}>
    <div class="space-y-32">
        <Container>
            <Heading maxWidth="max-w-3xl">
                <h1 slot="heading">I shoot professional car photography in Austin.</h1>
                <div slot="description" class="space-y-8">
                    <p>
                        For the last five years, I've been shooting professional car photography all over central Texas. My passion for automobiles lets me bring out the best in your vehicle. I'll
                        expertly capture every curve resulting in stunning images.
                    </p>
                </div>
            </Heading>
        </Container>

        <Container>
            <ul class="grid grid-cols-1 gap-6 lg:gap-8 lg:grid-cols-3" role="list">
                {
                    links.map((l) => (
                        <a href={l.url} class="block relative space-y-3 py-5 px-5 border border-regent-900/20 rounded-lg hover:bg-regent-900 duration-200 group hover:shadow-2xl">
                            <p class="text-regent-900 group-hover:text-regent-100 font-medium lg:text-3xl text-xl">{l.heading}</p>
                            <p class="text-regent-800 group-hover:text-regent-200 text-lg lg:text-xl tracking-wide">{l.description}</p>
                            <div class="text-regent-900 text-xl tracking-tight font-semibold group-hover:text-regent-100">{l.cta}</div>
                        </a>
                    ))
                }
            </ul>
        </Container>

        <Container size="large">
            <Figure class="w-full h-[60em] object-cover" src="shoots/2020/2020-02-29-lit-show-day-three/lit-show-2020_037.jpg" />
        </Container>

        <Container>
            <section>
                <ul class="grid grid-cols-1 lg:grid-cols-3 list-none gap-10" role="list">
                    {
                        Testimonials.map((t) => (
                            <li class="flex flex-col justify-between">
                                <div class="space-y-4">
                                    <div class="flex gap-1">
                                        {[...Array(5)].map((i) => (
                                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="w-4 h-4 text-yellow-600">
                                                <path
                                                    fill-rule="evenodd"
                                                    d="M8 1.75a.75.75 0 0 1 .692.462l1.41 3.393 3.664.293a.75.75 0 0 1 .428 1.317l-2.791 2.39.853 3.575a.75.75 0 0 1-1.12.814L7.998 12.08l-3.135 1.915a.75.75 0 0 1-1.12-.814l.852-3.574-2.79-2.39a.75.75 0 0 1 .427-1.318l3.663-.293 1.41-3.393A.75.75 0 0 1 8 1.75Z"
                                                    clip-rule="evenodd"
                                                />
                                            </svg>
                                        ))}
                                    </div>
                                    <p class="text-regent-900/80 text-lg lg:text-xl tracking-wide">{t.text.short}</p>
                                </div>

                                <div class="group block flex-shrink-0 mt-6">
                                    <div class="flex items-center">
                                        <div>
                                            <img class="inline-block h-9 w-9 rounded-full" src="https://phanatik.lexingtonthemes.com/a.jpg" alt="" />
                                        </div>

                                        <div class="ml-3">
                                            <p class="text-sm font-medium text-gray-700 group-hover:text-gray-900">{t.name}</p>
                                            <p class="text-xs font-medium text-gray-500 group-hover:text-gray-700">{t.vehicle}</p>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        ))
                    }
                </ul>
            </section>
        </Container>

        <Figure figureClass="col-span-2" class="w-full h-[60em] object-cover" src="shoots/2023/2023-06-30-white-993-c4s/white-993-c4s_005.jpg" rounded={false} />

        <Container>
            <span class="text-base items-center inline-flex uppercase tracking-wide font-medium text-regent-600">Case Study</span>
            <div class="mt-8 grid grid-cols-1 lg:grid-cols-2 gap-24">
                <div class="text-balance text-2xl font-normal lg:text-4xl text-regent-900">{featured.data.title}</div>
                <div>
                    <div class="text-slate-500 text-lg lg:text-xl tracking-wide space-y-6">
                        <p>Meet the star of the auction, a timeless beauty - the 1997 Porsche 911 Carrera 4S Coupe.</p>
                        <p>
                            The owner had to make the impossible decision to get rid of the 993 after purchasing a low mileage 300ZX. With no room left in the garage, the Porsche had to find a new
                            home.
                        </p>
                        <p>The owner did an impeccable job representing the car on Cars &amp; Bids. After a week long auction, the car successfully sold for $101,500.</p>
                    </div>
                </div>
            </div>
        </Container>

        <div class="grid grid-cols-2">
            <Figure class="w-full h-[30em] object-cover" src="shoots/2023/2023-06-30-white-993-c4s/white-993-c4s_011.jpg" rounded={false} />
            <Figure class="w-full h-[30em] object-cover" src="shoots/2023/2023-06-30-white-993-c4s/white-993-c4s_007.jpg" rounded={false} />
        </div>
    </div>
</Layout>

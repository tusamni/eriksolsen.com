---
// components
import Figure from "@/components/image/Figure";

// functions
import { timeAgo } from "@/functions/DateTime";

// props
export interface Props {
    shoot: object;
}
const { shoot } = Astro.props;
---

<div class="space-y-4 lg:space-y-6">
    <div class="space-y-2">
        <div class="flex items-center gap-1 text-base text-neutral-700 lg:gap-2 lg:text-lg">
            <div>
                <time datetime={shoot.frontmatter.date}>{timeAgo(shoot.frontmatter.date)}</time>
            </div>

            <span>&#8231;</span>

            <p>{shoot.frontmatter.category}</p>
        </div>
    </div>

    <a href={shoot.url} title={shoot.title}>
        <!-- <Figure src={shoot.frontmatter.hero} sizes="(min-width: 640px) 500px, 100vw" /> -->
    </a>

    <div class="">
        <a class="" href={shoot.url} title={shoot.title}>
            <h2>{shoot.title}</h2>
        </a>

        <div class="">
            Shot <time datetime={shoot.date}>{timeAgo(shoot.date)}</time> in <span>{shoot.category}</span>
        </div>
        <p class="shoot-description">{shoot.description}</p>

        <p class="shoot-link">
            <a href={shoot.url}>Keep Reading <span>&rarr;</span></a>
        </p>
    </div>
</div>

---
export const prerender = true;

// layout
import Layout from "@/layouts/BaseLayout";

// components
import Container from "@/components/content/Container";
import Figure from "@/components/image/Figure";
import Heading from "@/components/content/Heading";

const images01 = ["shoots/2022/2022-02-27-lit-show-day-four/lit-show-2022_009", "shoots/2021/2021-06-23-porsche-930/porsche-930-2021_014", "shoots/2019/2019-05-26-coffee-with-cars/coffee-with-cars-2019_014", "shoots/2020/2020-02-27-lit-show-day-one/lit-show-2020_038"];
const images02 = ["shoots/2019/2019-08-17-signal-yellow-911/911s-targa_016", "shoots/2019/2019-05-27-treaty-oak-car-show/treaty-oak-car-show-2019_004", "shoots/2020/2020-02-27-lit-show-day-one/lit-show-2020_017"];
---

<Layout>
    <Container classes="py-32">
        <Heading>
            <h1 slot="heading">I'm a professional car photographer in Austin, TX.</h1>
            <p slot="description">
                With online car auctions rising in popularity, I've helped clients put their best foot forward with beautiful car photography. Whether it's <i>Bring a Trailer</i>, <i>Cars & Bids</i>, <i>Hagerty</i> or <i>eBay</i>, I can help get top dollar for your vehicle auction.
            </p>

            <div class="flex gap-4">
                <a href="/contact" class="button button-primary">Hire Me!</a>
                <a href="/photography" class="button button-primary">See More Photos</a>
            </div>
        </Heading>
    </Container>

    <div class="grid grid-cols-6">
        <Figure src={images01[0]} figureClass="h-[70vh] w-full object-cover col-span-6 sm:col-span-2" class="w-full h-full object-cover" metadata={false} loading="eager" sizes="33vw" />
        <Figure src={images01[1]} figureClass="h-[70vh] w-full object-cover col-span-6 sm:col-span-2" class="w-full h-full object-cover" metadata={false} loading="eager" sizes="33vw" />
        <Figure src={images01[2]} figureClass="h-[70vh] w-full object-cover col-span-6 sm:col-span-2" class="w-full h-full object-cover" metadata={false} loading="eager" sizes="33vw" />
        <Figure src={images01[3]} figureClass="h-[80vh] w-full object-cover col-span-6 sm:col-span-6" class="w-full h-full object-cover" metadata={false} sizes="100vw" />
    </div>

    <Container classes="py-32">
        <div class="grid grid-cols-2 gap-12">
            <div class="flex flex-col justify-between">
                <div>
                    <hr class="h-px bg-neutral-800 border-0 mb-8" />
                    <h2>Car Photography FAQ</h2>
                </div>

                <a href="/contact" class="button button-primary w-fit">Ask me a question</a>
            </div>

            <div class="mt-8 space-y-10">
                {
                    [...Array(5)].map((_, i) => (
                        <div class="flex justify-between items-center">
                            <h4>Will you come to my location?</h4>
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                            </svg>
                        </div>
                    ))
                }
            </div>
        </div>
    </Container>

    <div class="grid grid-cols-2 grid-rows-2">
        <Figure src={images02[0]} figureClass="h-[40vh] w-full object-cover" class="w-full h-full object-cover" metadata={false} loading="eager" sizes="50vw" />
        <Figure src={images02[1]} figureClass="h-[80vh] w-full object-cover row-span-2" class="w-full h-full object-cover" metadata={false} loading="eager" sizes="50vw" />
        <Figure src={images02[2]} figureClass="h-[40vh] w-full object-cover" class="w-full h-full object-cover" metadata={false} loading="eager" sizes="50vw" />
    </div>
</Layout>

---
// props
export interface Props {
    large?: boolean;
    padBottom?: boolean;
    classes?: string;
}
const { large = false, padBottom = false, classes } = Astro.props;
---

<div
    class:list={[
        "relative",
        !large && `px-6 sm:px-8 lg:px-12`,
        padBottom && `pb-32 md:pb-48`,
        classes,
    ]}>
    <div class:list={["mx-auto", large ? `max-w-screen-2xl` : `max-w-6xl`]}>
        <slot />
    </div>
</div>

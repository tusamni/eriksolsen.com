---
// layout
import BaseLayout from "@/layouts/BaseLayout";

// components
import { Image } from "@astrojs/image/components";
import Block from "@/components/content/Block";
import Container from "@/components/content/Container";
import Section from "@/components/content/Section";

// functions
import { getPublicPath } from "@/functions/Media";
---

<BaseLayout
    title="Thanks - I'm a Digital Marketing Expert and Car Photographer in Austin, TX"
    description="Erik Olsen is the Director of Digital Engagement at ICG America in Austin, TX. He's also an automotive photographer shooting photos at Austin car shows."
>
    <Container>
        <Section>
            <hr />

            <Block>
                <h1 slot="left">Thanks for reaching out!</h1>
                <p slot="right" class="text-xl md:text-3xl font-light !leading-relaxed">
                    I really appreciate you contacting me. I've received your email and there's a good chance I'm reading it right now.
                </p>
            </Block>

            <hr />
        </Section>
    </Container>

    <Container size="lg" padding={false}>
        <div class="grid grid-cols-3 xl:gap-6">
            <Image
                src={getPublicPath("/me/me_01.jpeg")}
                width="1000"
                height="1333"
                alt="Wyatt and I at home"
                class="object-cover shadow-2xl xl:rounded-md"
            />
            <Image
                src={getPublicPath("/me/me_02.jpeg")}
                width="1000"
                height="1333"
                alt="Wyatt and I at home"
                class="object-cover shadow-2xl xl:rounded-md"
            />
            <Image
                src={getPublicPath("/me/me_03.jpeg")}
                width="1000"
                height="1333"
                alt="Wyatt and I at home"
                class="object-cover shadow-2xl xl:rounded-md"
            />
        </div>
    </Container>

    <Container>
        <div class="prose prose-lg">
            <h2>While You're Waiting</h2>
            <p>
                While I'm working on my response, why not check out some of my recent <a href="/photography">automotive photoshoots</a>? You may also
                want to check out my <a href="/blog">blog</a>, I occasionally write about technology and photography.
            </p>
            <p><i>Thanks again!</i></p>
        </div>
    </Container>
</BaseLayout>

---
// props
export interface Props {
    small?: boolean;
    float?: boolean;
    reverse?: boolean;
}
const { small = false, float = false, reverse = false } = Astro.props;
---

<div
    class:list={[
        "flex gap-12",
        reverse ? `flex-col-reverse` : `md:flex-row flex-col`,
    ]}>
    <div
        class:list={[
            small ? `w-full md:w-1/4` : `w-full md:w-1/3`,
            "flex flex-col justify-between gap-6 md:gap-0 border-y md:border-b-0 border-neutral-800 dark:border-neutral-400 py-12 md:pb-0",
        ]}>
        <div class:list={[float && "sticky top-12"]}>
            <slot name="heading" />
        </div>

        <slot name="bottom" />
    </div>

    <div class:list={[small ? "w-full md:w-3/4" : `w-full md:w-2/3`]}>
        <slot />
    </div>
</div>

---
// props
export interface Props {
    size?: "small" | "large";
    padBottom?: boolean;
    classes?: string;
}
const { size = "small", padBottom = false, classes } = Astro.props;
---

<div class:list={["relative", size == "small" && "px-6 sm:px-8 lg:px-12", padBottom && "pb-32 md:pb-48", classes]}>
    <div class:list={["mx-auto", size == "large" ? "max-w-screen-2xl" : "max-w-screen-xl"]}>
        <slot />
    </div>
</div>

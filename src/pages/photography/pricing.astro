---
// layout
import Layout from "@/layouts/BaseLayout";

// imports
import { Pricing } from "@/data/Photography";
import Container from "@/components/content/Container";
import Figure from "@/components/image/Figure";
import Heading from "@/components/content/Heading";
import Picture from "@/components/image/Picture";
---

<Layout
    title="Car Photography in Austin, TX"
    description="During the summer months you'll catch me shooting photos at Cars and Coffee at COTA or Coffee With Cars in Dripping Springs. I also do freelance photography for Bring a Trailer auctions."
    footerPadding={false}>
    <Container classes="sm:py-24">
        <div class="items-center mx-auto 2xl:max-w-7xl">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
                {
                    Pricing.map((p) => (
                        <section class="flex flex-col gap-10">
                            <div class="space-y-2">
                                <p class="h4 text-regent-900">{p.title}</p>
                                <p class="text-lg text-regent-900 mt-2">{p.description}</p>
                            </div>

                            <p class="text-regent-900 font-medium text-5xl tracking-tight">{p.pricing}</p>

                            <ul class="text-lg flex flex-col gap-y-3 text-regent-900" role="list">
                                {p.items.map((i) => (
                                    <li class="inline-flex gap-1 items-center">
                                        <span>{i}</span>
                                        <div class="relative group">
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    d="m11.25 11.25.041-.02a.75.75 0 0 1 1.063.852l-.708 2.836a.75.75 0 0 0 1.063.853l.041-.021M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9-3.75h.008v.008H12V8.25Z"
                                                />
                                            </svg>

                                            <div
                                                class="invisible group-hover:visible absolute top-3 left-3 z-10 space-y-1 bg-regent-900 text-gray-50 text-sm rounded px-4 py-2 w-fit shadow-md text-balanced"
                                                role="tooltip"
                                                aria-hidden="true">
                                                This is the Tooltip.
                                            </div>
                                        </div>
                                    </li>
                                ))}
                            </ul>

                            <div>
                                <a class="button button-primary text-lg" href="#">
                                    Get started
                                </a>
                            </div>
                        </section>
                    ))
                }
            </div>
        </div>
    </Container>

    <Figure src="shoots/2020/2020-02-27-lit-show-day-one/lit-show-2020_038.jpg" />
</Layout>

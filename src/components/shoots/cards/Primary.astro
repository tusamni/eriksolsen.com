---
// props
export interface Props {
    shoot: object;
}
const { shoot } = Astro.props;

// components
import Image from "@/components/image/Image";

// functions
import { formatDate } from "@/functions/DateTime";
---

<a
    href={`/photography/shoots/${shoot.slug}`}
    class="group relative flex items-center justify-center h-[30em] overflow-hidden">
    <Image
        src={shoot.data.hero}
        figureClass="absolute w-full h-full"
        class="w-full h-full object-cover group-hover:scale-105 group-hover:rotate-1 duration-500 transition"
        metadata={false}
        loading="eager"
        sizes="100vw"
    />

    <div
        class="bg-white dark:bg-black absolute bottom-0 left-0 z-10 space-y-3 px-4 py-6 w-11/12 lg:w-5/6 xl:w-2/3">
        <div class="flex justify-between items-center hover:cursor-pointer">
            <h4>{shoot.data.title}</h4>
        </div>

        <p
            class="text-neutral-800 dark:text-neutral-400 text-lg md:text-xl leading-8 transition-all duration-300 line-clamp-1">
            {shoot.data.description}
        </p>

        <div
            class="hidden md:flex gap-2 items-center justify-between text-base text-neutral-500 dark:text-neutral-500">
            <time>{formatDate(shoot.data.date)}</time>
            <div>{shoot.data.gallery.length} photos</div>
        </div>
    </div>
</a>

---
// props
export interface Props {
    project: object
}
const { project } = Astro.props;
---

<style lang="scss">
    @import "../assets/styles/base/mixins/mx-breakpoints.scss";
    @import "../assets/styles/base/mixins/mx-spacing.scss";

    .project {
        @include space-y(var(--space-100));

        @include bp-md {
            @include space-y(var(--space-200));
        }

        .project-heading {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            align-items: start;

            @include bp-md {
                flex-direction: row;
                align-items: center;
                gap: var(--space-100);
            }

            .project-title {
                display: flex;
                align-items: center;
                gap: var(--space-50);

                a {
                    text-decoration: none;
                    color: rgba(var(--color-gray-800), 1);
                }
            }

            .project-lang {
                display: none;
                color: rgba(var(--color-gray-400), 1);
                width: fit-content;
                padding: var(--space-50) var(--space-50);
                text-transform: lowercase;
                font-size: var(--text-sm);
                background: rgba(var(--color-gray-100), 1);
                border-radius: .25rem;

                @include bp-md {
                    display: block;
                }
            }
        }

        .project-description {
            font-size: var(--text-base);
            font-weight: 300;
            line-height: var(--line-height-xl);

            @include bp-lg {
                font-size: var(--text-lg);
            }
        }

        .project-github {
            display: flex;
            align-items: center;
            gap: var(--space-50);
            color: rgba(var(--color-gray-800), 1);
            text-decoration: none;

            &:hover svg {
                transform: rotate(6deg) scale(1.1);
            }

            svg {
                height: 1rem;
                width: auto;
                transition: all .3s;

                @include bp-md {
                    height: 1.25rem;
                }
            }

            p {
                font-weight: 600;
                font-size: var(--text-lg);
                transition: all .3s;

                @include bp-md {
                    font-size: var(--text-xl);
                }
            }
        }
    }
</style>

<div class="project">
    <div class="project-heading">
        <div class="project-title">
            <a href={project.url} title={project.name}>
                <h4>{project.name}</h4>
            </a>
        </div>

        <div class="project-lang">{project.language}</div>
    </div>

    <p class="project-description">{project.description}</p>

    <a class="project-github" href={project.url} title={project.name}>
        <svg fill="currentColor" viewBox="0 0 16 16" xmlns="http://www.w3.org/2000/svg">

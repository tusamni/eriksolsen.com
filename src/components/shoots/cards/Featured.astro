---
// props
export interface Props {
	shoot: object;
	featured?: boolean;
	excerpt?: boolean;
	lazy?: boolean;
	sizes?: string;
}
const { shoot, featured = false, excerpt = false, lazy = true, sizes = "100vw" } = Astro.props;

// components
import Image from "@/components/image/Image";

// functions
import { timeAgo } from "@/functions/DateTime";
---

<div class="self-stretch h-126 relative rounded-[10px] inline-flex flex-col justify-between items-start overflow-hidden">
	<Image src={shoot.data.images.thumbnail.url} figureClass="absolute w-full h-full" class="w-full h-full object-cover" sizes={sizes} showTitle={false} lazy={lazy} />
	<div class="absolute bg-linear-to-b from-black/80 via-black/0 to-black w-full h-full"></div>

	<div class="p-4 self-stretch inline-flex justify-between items-center relative">
		<div class="pill pill-ghost pill-inverse">
			<div class="justify-start">auction</div>
		</div>

		<div class="justify-start text-stone-100 text-xs font-normal uppercase">{shoot.data.auction.sold
			? "Sold for"
			: "Bid to"}{" "}
		$
		{Intl.NumberFormat().format(
			shoot.data.auction.price,
		)}</div>
	</div>

	<div class="w-96 justify-start text-stone-100 text-2xl font-bold font-['Unbounded'] uppercase leading-7 tracking-wide">1979 Porsche 911 Carrera</div>
</div>


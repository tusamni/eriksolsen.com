---
// layout
import Layout from "@/layouts/BaseLayout";

// components
import { auctionSites, Testimonials } from "@/data/Photography";
import Container from "@/components/content/Container";
import Figure from "@/components/image/Figure";
import Heading from "@/components/content/Heading";
import Icon from "@/components/Icon";
import Post from "@/components/blog/cards/Primary";
import Split from "@/components/content/Split";

// content
import { getCollection } from "astro:content";
const posts = (await getCollection("blogs")).sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf()).slice(0, 4);
const shoots = (
    await getCollection("shoots", ({ data }) => {
        return data.featured == true;
    })
)
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
    .slice(0, 4);

const gallery = [
    "shoots/2020/2020-02-28-lit-show-day-two/lit-show-2020_048.jpg",
    "shoots/2022/2022-02-27-lit-show-day-four/lit-show-2022_039.jpg",
    "shoots/2020/2020-02-29-lit-show-day-three/lit-show-2020_012.jpg",
    "shoots/2017/2017-11-03-cota-classic/cota-classic-2017_004.jpg",
];
---

<Layout title="Car Photographer in Austin, TX - I Shoot Professional Car Photos for Your Online Auction.">
    <Container>
        <Heading maxWidth="max-w-3xl">
            <h1 slot="heading">I'm a professional car photographer in Austin.</h1>
            <p slot="description">
                With online car auctions rising in popularity, I've helped clients put their best foot forward with beautiful car photography. Whether it's <i>Bring a Trailer</i>, <i>Cars & Bids</i>, <i>
                    Hagerty
                </i> or <i>eBay</i>, I can help get top dollar for your vehicle auction.
            </p>

            <div class="flex gap-4">
                <a href="/contact" class="button button-primary text-lg md:text-xl">Hire Me!</a>
                <a href="/photography/shoots" class="button button-ghost text-lg md:text-xl">See More Photos</a>
            </div>
        </Heading>
    </Container>

    <Container size="large">
        <div class="grid grid-cols-6 gap-8">
            <Figure
                src={gallery[0]}
                figureClass="col-span-6 md:col-span-3 lg:col-span-2"
                class="w-full h-full object-cover"
                loading="eager"
                sizes="(min-width: 768px) 50vw, (min-width: 1024px) 33vw, (min-width: 1536px) 500px"
            />
            <Figure
                src={gallery[1]}
                figureClass="col-span-6 md:col-span-3 lg:col-span-2"
                class="w-full h-full object-cover"
                loading="eager"
                sizes="(min-width: 768px) 50vw, (min-width: 1024px) 33vw, (min-width: 1536px) 500px"
            />
            <Figure
                src={gallery[2]}
                figureClass="col-span-6 md:col-span-3 lg:col-span-2"
                class="w-full h-full object-cover"
                loading="eager"
                sizes="(min-width: 768px) 50vw, (min-width: 1024px) 33vw, (min-width: 1536px) 500px"
            />
        </div>
    </Container>

    <Container>
        <Split>
            <div slot="heading" class="space-y-6">
                <h2 class="text-balance">Car Auction Photography</h2>
            </div>

            <div class="space-y-24">
                <div class="prose prose-2xl max-w-none">
                    <p>
                        Capturing the essence of your beloved vehicle is an art, and I specialize in bringing out its unique charm through stunning photographs. As a dedicated automotive photographer
                        catering to online auction platforms like Bring a Trailer, eBay, Cars & Bids and Hagerty, I go beyond the ordinary to showcase your car in its best light.
                    </p>
                    <p>
                        High-quality visuals are key to attracting potential buyers. My expertise lies in creating images that not only grab attention but also drive up interest and bidding activity,
                        ensuring your car receives the recognition it deserves!
                    </p>
                    <p>
                        Armed with top-notch photography equipment and a keen eye for composition, I deliver images that not only meet but exceed industry standards. Your vehicle deserves nothing less
                        than the best, and that's exactly what I provide.
                    </p>
                </div>

                <div class="grid grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-12">
                    <Icon icon={`auctions/${auctionSites[0]}`} class="justify-self-start h-8 w-2/3" />
                    <Icon icon={`auctions/${auctionSites[1]}`} class="justify-self-center h-8 w-2/3" />
                    <Icon icon={`auctions/${auctionSites[2]}`} class="justify-self-end h-8 w-2/3" />
                    <Icon icon={`auctions/${auctionSites[3]}`} class="justify-self-start h-8 w-2/3" />
                    <Icon icon={`auctions/${auctionSites[4]}`} class="justify-self-center h-8 w-2/3" />
                    <Icon icon={`auctions/${auctionSites[5]}`} class="justify-self-end h-8 w-2/3" />
                </div>

                <blockquote class="space-y-4 text-center">
                    <p class="text-4xl leading-normal">"{Testimonials[0].text}"</p>
                    <div class="space-y-0">
                        <p class="font-semibold text-2xl italic">- {Testimonials[0].name}</p>
                        <p>{Testimonials[0].vehicle}</p>
                    </div>
                </blockquote>
            </div>
        </Split>
    </Container>

    <Container size="large">
        <Figure src="shoots/2021/2021-06-23-porsche-930/porsche-930-2021_007.jpg" figureClass="col-span-6 md:col-span-3 lg:col-span-6" class="w-full h-full object-cover" sizes="100vw" />
    </Container>

    <Container>
        <Split>
            <div slot="heading" class="space-y-6">
                <h2>Recent Posts</h2>
                <p class="text-xl leading-relaxed">
                    I love writing about all things tech, developement and photography. If you want to keep reading, check out my <a href="/blog" class="underline">blog</a>.
                </p>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
                {posts.map((p, i) => <Post post={p} size="small" />)}
            </div>
        </Split>
    </Container>


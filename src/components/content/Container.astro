---
// props
export interface Props {
    size?: "small" | "large";
    padding?: boolean;
    classes?: string;
}
const { size = "small", padding = true, classes } = Astro.props;
---

<div class:list={["relative", padding && "px-6 sm:px-8 lg:px-12", classes]}>
    <div class:list={["mx-auto", size == "large" ? "max-w-7xl" : "max-w-6xl"]}>
        <slot />
    </div>
</div>

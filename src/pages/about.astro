---
export const prerender = true;

// layout
import Layout from "@/layouts/BaseLayout";

// components
import { Icon } from "astro-icon/components";
import Container from "@/components/content/Container";
import Heading from "@/components/content/Heading";
import Split from "@/components/content/Split";

// data
import { Career, Sections } from "../data/About";
---

<Layout title="Erik S. Olsen - I'm a Digital Marketing Expert located in Austin, TX" description="Erik Olsen is the Director of Digital Engagement at ICG America in Austin, TX. My expertise is designing and creating large-scale, data-driven marketing campaigns for e-commerce businesses.">
    <Container>
        <Heading>
            <h1 slot="heading">
                I do digital marketing<br /> & web development.
            </h1>
            <p slot="description">For fifteen years, I've run digital marketing campaigns. Lately, I've been in charge of revenue growth at ICG America, generating $50 million in direct-to-consumer sales.</p>
        </Heading>
    </Container>

    <!-- career path -->
    <Container>
        <ol class="grid grid-cols-1 lg:grid-cols-3 gap-16 lg:gap-0">
            {
                Career.map((c) => (
                    <li class="space-y-6">
                        <div class:list={["flex items-center justify-center rounded-full h-10 w-10 ring-8", c.iconBg]}>
                            <div class="relative flex items-center justify-center bg-white w-full h-full rounded-full p-2 overflow-hidden">
                                <Icon name={c.icon} class:list={["absolute", c.size]} />
                            </div>
                        </div>

                        <div class="space-y-2 sm:max-w-lg">
                            <div class="h3">{c.title}</div>
                            <div class="text-neutral-500">{c.dates}</div>

                            <p class="pr-12 text-lg">{c.summary}</p>
                        </div>
                    </li>
                ))
            }
        </ol>
    </Container>

    <Container padBottom={true}>
        <div class="space-y-32">
            {
                Sections.map((s) => (
                    <Split>
                        <h2 slot="heading">{s.title}</h2>

                        <div class="space-y-24">
                            <div class="space-y-6 text-xl sm:text-2xl leading-8 sm:!leading-10" set:html={s.description} />

                            <div class="text-lg space-y-2">
                                <div class="space-y-8">
                                    <div>
                                        <div class="font-semibold">{s.short} Knowledge</div>
                                        <ul class="comma-list">
                                            {s.knowledge.map((i) => (
                                                <li>{i}</li>
                                            ))}
                                        </ul>
                                    </div>

                                    <div>
                                        <div class="font-semibold">{s.short} Tools I Use</div>
                                        <ul class="comma-list">
                                            {s.tools.map((t) => (
                                                <li>{t}</li>
                                            ))}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </Split>
                ))
            }
        </div>
    </Container>
</Layout>

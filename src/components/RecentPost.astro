---
// functions
import { timeAgo } from "@/functions/DateTime"

// props
export interface Props {
    post: object
}
const { post } = Astro.props;
---

<div class="space-y-6">
    <div class="text-neutral-700 text-lg flex items-center gap-2">
        <div><time datetime={post.frontmatter.date}>{timeAgo(post.frontmatter.date)}</time></div>
        <span>&#8231;</span>
        <p>{post.frontmatter.category}</p>
    </div>
    <h3 class="font-semibold text-3xl tracking-tighter">{post.frontmatter.title}</h3>
    <p class="text-lg">{post.frontmatter.description}</p>
</div>